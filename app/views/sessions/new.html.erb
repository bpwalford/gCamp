<%= form_for(:session, url: signing_in_path) do |f| %>

  <div class="col-md-4 col-md-offset-4 well">


    <h3>Sign into gCamp</h3><br>
    
    <% if flash.any? %>
      <div class="alert alert-danger">
        <%= flash[:error] %>
      </div>
    <% end %>

    <br>
    <div>
      <%= f.label :email %>
    </div>
    <div>
      <%= f.email_field :email, class: "col-md-12" %>
    </div>
    <br><br>
    <div>
      <%= f.label :password %>
    </div>
    <div>
      <%= f.password_field :password, class: "col-md-12" %>
    </div>
    <br><br>
    <div>
      <%= f.submit "Sign In", class: "btn btn-primary" %>
    </div>

  </div>


<% end %>
