<div class="task-form">
  <%= form_for([@project, @task], :html => {:class => 'form-horizontal'}) do |f| %>

    <%= render 'shared/errors', model: @task %>

    <div class="field form-group row">
      <%= f.label :description, :class => "col-md-2" %>
      <div class="col-md-4">
        <%= f.text_field :description, :class => "form-control" %>
      </div>
    </div>
    <div class="field form-group row">
      <%= f.label :due_date, :class => "col-md-2" %>
      <div class="col-md-4">
        <%= f.date_field :due_date, :class => "form-control" %>
      </div>
    </div>
    <% if @task.id? %>
      <div class="field form-group row check">
        <div class="col-md-offset-2">
          <%= f.check_box :complete %>
          <%= f.label :complete %>
        </div>
      </div>
    <% end %>

    <div class="actions form-group row">
      <div class="col-md-2 col-md-offset-2">
        <%= f.submit class: 'btn btn-primary'%>
      </div>
    </div>

  <% end %>
</div>
