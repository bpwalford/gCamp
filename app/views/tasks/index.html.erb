<div class="container">

  <h1 class="page-header">Tasks
      <%= link_to 'Create Task', new_task_path, class: "btn btn-info pull-right" %>
  </h1>
  <th colspan="3"></th>

  <table class="table">
    <thead>
      <tr>
        <th>Desription</th>
        <th>Complete</th>
        <th>Due</th>
      </tr>
    </thead>

    <tbody>
      <% sorted = @tasks.order(:due_date) %>
      <% sorted.each do |task| %>
        <tr>
          <td class="col-md-3">
            <div class="pull-left tasks-td-top-buffer"><%= task.desription %></div>
          </td>
          <td class="col-md-3">
            <div class="tasks-td-top-buffer">
              <%= task.complete ? "True" : "False" %>
            </div>
          </td>
          <td class="col-md-3">
            <div class="tasks-td-top-buffer">
              <% if task.due_date != nil %>
                <%= task.due_date.strftime('%m/%d/%y') %>
              <%end%>
            </div>
          </td>
          <td class="col-md-3">
            <span class="pull-right">
              <%= link_to 'Show', task, class: "btn btn-success" %>
              <%= link_to 'Edit', edit_task_path(task), class: "btn btn-primary" %>
              <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
            </span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>
