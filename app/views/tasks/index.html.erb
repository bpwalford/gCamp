<div class="container">

  <h1 class="page-header">Tasks

    <span class="btn btn-info pull-right">
      <%= link_to 'Create Task', new_task_path %>
    </span>

  </h1>
  <th colspan="3"></th>

  <table class="table">
    <thead>
      <tr>
        <th>Desription</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.desription %></td>
          <td><%= link_to 'Show', task, class: "btn btn-success pull-right" %></td>
          <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-primary pull-right" %></td>
          <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger pull-right" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>
