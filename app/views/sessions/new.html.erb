<%= form_for(:session, url: signing_in_path) do |f| %>

  <div class="col-md-4 col-md-offset-4 well">

    <h3>Sign into gCamp</h3><br>

    <% if flash.any? && params[:invalid] %>
      <div class="alert alert-danger">
        <%= flash[:error] %>
      </div>
    <% end %>

    <div class="field form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "col-md-12  form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "col-md-12  form-control" %>
    </div>

    <br>
    <br>

    <%= f.hidden_field 'attempt', value: params[:attempt] %>

    <div class="actions form-group">
      <%= f.submit "Sign In", class: "btn btn-primary" %>
    </div>

  </div>

<% end %>
