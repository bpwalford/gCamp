<div class="container">

  <div class="page-header row">
    <h1 class="col-md-11">Users</h1>
    <div class="col-md-1 tasks-create-button">
      <%= link_to 'Create User', new_user_path, class: "btn btn-info pull-right" %>
    </div>
  </div>
  <th colspan="3"></th>

  <table class="table">
    <thead>

      <tr>
        <th class="col-md-2">Name</th>
        <th class="col-md-10">Email</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <div class="pull-left tasks-td-top-buffer"><%= user.first_name + ' ' + user.last_name %></div>
          </td>
          <td>
            <div class="tasks-td-top-buffer pull-left">
              <%= mail_to user.email %>
            </div>
            <div>
              <%= link_to "edit", edit_user_path(user), class: "pull-right" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>
