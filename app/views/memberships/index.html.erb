<div class="members-page">

  <div class="page-header">
    <h1><%= @project.name %>: Manage Members</h1>
  </div>

  <%= crumbs([ {:name => "Projects", :link => "/projects"},
    {:name => "#{@project.name}", :link => "/projects/#{@project.id}"},
    {:name => "Memberships", :link => "active"} ]) %>

  <% if flash[:error] %>
    <div class="alert alert-danger">
      <%= flash[:error] %>
    </div>
  <% end %>

  <br>

  <%= if current_user.owner?(@project) || admin?
        render 'owner_index.html.erb'
      else
        render 'member_index.html.erb'
      end %>

</div>
