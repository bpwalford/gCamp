!!!
%html{:lang => "en"}
  %head
    %title gCamp
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body.full

    -# navigation bar
    .navbar.navbar-inverse.narbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          = link_to "gCamp", :home, class: "navbar-brand"

    -# page content
    =yield

    -# footer
    .container
      .row
        .footer-content
          %hr
          .footer
            %p
              =link_to_unless @path == "/about", "About |", :aboutPage
              =link_to_unless @path == "/terms", "Terms |", :termsPage
