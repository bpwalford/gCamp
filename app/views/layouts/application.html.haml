!!!
%html{:lang => "en"}
  %head
    %title gCamp
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body.full

    -# navigation bar
    .navbar.navbar-inverse.narbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          = link_to "gCamp", :home, class: "navbar-brand"

    -# content area
    .row
      .col-md-10.col-md-offset-1
        =yield

    -# footer
    .row
      .container
        .footer-content
          %hr
          .footer
            -if @path == "/about"
              %span About
              %span|
              %span=link_to "Terms", :termsPage
            -elsif @path == "/terms"
              %span=link_to "About", :aboutPage
              %span|
              %span Terms
            -else
              %span=link_to "About", :aboutPage
              %span|
              %span=link_to "Terms", :termsPage
