<%= form_for(@user, url: register_path) do |f| %>


  <div class="col-md-4 col-md-offset-4 well">

    <h3>Sign up for gCamp</h3><br>

    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <br>
    <div>
      <%= f.label :email %>
    </div>
    <div>
      <%= f.email_field :email, class: "col-md-12" %>
    </div>
    <br><br>
    <div>
      <%= f.label :password %>
    </div>
    <div>
      <%= f.password_field :password, class: "col-md-12" %>
    </div>
    <br><br>
    <div>
      <%= f.label :password_confirmation %>
    </div>
    <div>
      <%= f.password_field :password_confirmation, class: "col-md-12" %>
    </div>
    <br><br>
    <div>
      <%= f.submit "Sign Up", class: "btn btn-primary" %>
    </div>

  </div>

<% end %>
