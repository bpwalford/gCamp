<div class="show-user">

  <div class="page-header row">
    <h1 class="col-md-11"><%= @user.full_name if @user.first_name %></h1>
    <div class="col-md-1 tasks-create-button">
      <% if current_user == @user || admin? %>
        <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-info pull-right" %>
      <% end %>
    </div>
  </div>

<div>

  <div class="row">
    <p class="col-md-2 user-info"><strong>First name:</strong></p>
    <p class="col-md-2"><%= @user.first_name %></p>
  </div>

  <div class="row">
    <p class="col-md-2 user-info"><strong>Last name:</strong></p>
    <p class="col-md-2"><%= @user.last_name %></p>
  </div>

  <% if current_user == @user || friend?(@user) %>
    <div class="row">
      <p class="col-md-2 user-info"><strong>Email:</strong></p>
      <p class="col-md-2"><%= mail_to @user.email %></p>
    </div>
  <% end %>
  <div class="row">
    <p class="col-md-2 user-info"><strong>Pivotal Tracker Token:</strong></p>
    <% if @user.tracker_token %>
      <p class="col-md-2"><%= @user.tracker_token[1..4] + '*'*20%></p>
    <% else %>
      <p class="col-md-2">(no pivotal tracker token)</p>
    <% end %>
  </div>

</div>
