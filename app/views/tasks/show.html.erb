<div class="container">

  <%=
    crumbs([
            {:name => "Tasks", :link => "/tasks"},
            {:name => @task.description, :link => "active"}
          ])

   %>

  <p>
    <strong>Description:</strong>
    <%= @task.description %>
  </p>
  <p>
    <strong>Due:</strong>
    <%= @task.due_date %>
  </p>
  <p>
    <strong>Complete:</strong>
    <%= @task.complete %>
  </p>


  <%= link_to 'Edit', edit_task_path(@task) %> |
  <%= link_to 'Back', tasks_path %>
</div>
