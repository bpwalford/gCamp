!!!
%html{:lang => "en"}
  %head
    %title gCamp
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    .navbar.navbar-inverse.narbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          = link_to "gCamp", :home, class: "navbar-brand"
    -# main page container
    .row
      .col-md-10.col.col-md-offset-1.content
        =yield

        %hr
        .footer
          -if @path == "/about"
            %span About
            %span|
            %span=link_to "Terms", :termsPage
          -elsif @path == "/terms"
            %span=link_to "About", :aboutPage
            %span|
            %span Terms
          -else
            %span=link_to "About", :aboutPage
            %span=link_to "Terms", :termsPage
