<div class="container">

  <div class="page-header">
    <h1><%= @project.name %>: Manage Members</h1>
    <%=
      crumbs([
              {:name => "Projects", :link => "/projects"},
              {:name => "#{@project.name}", :link => "/projects/#{@project.id}"},
              {:name => "Memberships", :link => "active"}
            ])
    %>
  </div>

  <div class="row">
    <div class="new-member-form form-inline well col-md-6">

      <%= form_for [@project, @membership] do |f| %>

        <div class="form-group">
          <%= f.label :user %>
          <%= f.collection_select(:user_id, User.all, :id, :full_name, {include_blank: 'please select a user'}, {class: 'form-control'}) %>
        </div>

        <div class="form-group">
          <%= f.label :status %>
          <%= f.select :status, options_for_select(%w[member owner]), {}, {class: 'form-control'} %>
        </div>

        <%= f.submit  "Add New Member", class: 'btn btn-primary pull-right' %>

      <% end %>

    </div>
  </div>

  <div class="current-members">
    <% @memberships.each do |member| %>

      <div class="form-inline row">

        <%= form_for [@project, member] do |f| %>
          <%= member.user.full_name %>
          <%= f.select :status, options_for_select(%w[member owner]), {include_blank: member.status}, {class: 'form-control'} %>
          <%= f.submit "Update", class: "btn btn-primary" %>
          <%= link_to content_tag(:span, "", class: "glyphicon glyphicon-remove"), project_membership_path(@project, member), method: :delete, data: {confirm: 'Are you sure?'} %>
        <% end %>

      </div>

    <% end %>
  </div>

</div>
