%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %link{:href => "../../favicon.ico", :rel => "icon"}/
    %title Jumbotron Template for Bootstrap
    %link{:href => "bootstrap.min.css", :rel => "stylesheet"}/
    %link{:href => "jumbotron.css", :rel => "stylesheet"}/
    %script{:src => "../../assets/js/ie-emulation-modes-warning.js"}

  %body
    .navbar.navbar-inverse.narbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          %a.navbar-brand gCamp
    -# main page container
    .row
      .col-md-10.col.col-md-offset-1.content
        -# jumbotron row
        .row
          .col-md-12
            .container
              .jumbotron
                %h1 gCamp
                %p Your life, organized
        -# panel container
        .container
          .row
            -# first column
            .col-md-4
              .panel.panel-default.panel-image
                .panel-body
                  %img.panelImage{:src => "https://farm3.staticflickr.com/2833/8865586006_c5ce2a79e6_n.jpg"}/
              .panel.panel-primary.panel-content
                .panel-heading
                  %h4.panel-title Tasks
                .panel-body
                  %p Grouped by projects and lists. Just the way you like 'em
            -# second column
            .col-md-4
              .panel.panel-default.panel-image
                .panel-body
                  %img.panelImage{:src => "https://farm4.staticflickr.com/3832/8865584540_b5307795be_n.jpg"}/
              .panel.panel-primary.panel-content
                .panel-heading
                  %h4.panel-title Documents
                .panel-body
                  %ul
                    %li Upload
                    %li Comment
                    %li Revise
            -# third column
            .col-md-4
              .panel.panel-default.panel-image
                .panel-body
                  %img.panelImage{:src => "https://farm4.staticflickr.com/3821/9232183203_859067da50_n.jpg"}/
              .panel.panel-primary.panel-content
                .panel-heading
                  %h4.panel-title Comments
                .panel-body
                  %ul
                    %li Comment on tasks and documents
                    %li Get email notifications

    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"}
    %script{:src => "../../dist/js/bootstrap.min.js"}
    %script{:src => "../../assets/js/ie10-viewport-bug-workaround.js"}
